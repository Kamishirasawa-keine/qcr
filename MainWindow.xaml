<Window x:Class="qcre.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:qcre"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <GroupBox Header="File" Grid.Column="0">
            <StackPanel VerticalAlignment="Center">
                <TextBox Text="D:/Projects/qcinfo/test.qc" x:Name="PathBox"/>
                <Button Content="Browse"/>
                <Button Content="Parse"/>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Info" Grid.Column="1">
            <TreeView x:Name="InfoView"/>
        </GroupBox>
    </Grid>
</Window>
